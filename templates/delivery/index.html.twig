{% extends 'base.html.twig' %}
{% block link %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/addGame.css') }}">

{% endblock %}
{% block title %}nouveau carnet{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}

        <div class="alert alert-success text-center">{{ message }}</div>

    {% endfor %}
    {% for message in app.flashes('warning') %}

        <div class="alert alert-danger text-center">{{ message }}</div>

    {% endfor %}
<div class="container text-center my-5">
    {{ form_start(form) }}
    <div class="text-danger fw-bold">
        {{ form_errors(form.newDelivery) }}
        {{ form_errors(form) }}
    </div>
    <div class="d-flex">
        {{ form_widget(form.newDelivery) }}
        <button name="newInvoice" type="submit" class="mx-5 btn btn-primary">Ajouter</button>
    </div>
    {{ form_end(form) }}

</div>


    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap-select.js') }}"></script>
    <script src="{{ asset('js/selectGame.js') }}"></script>




{% endblock %}
