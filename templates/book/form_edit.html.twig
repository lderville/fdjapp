{{ form_start(form) }}
<div class="wrapper">

	<div class="form-group d-flex align-items-center">
		{{ form_row(form.reference) }}
	</div>
	<div class="my-3">
		{{ form_row(form.activationDate) }}
	</div>

	<div class="my-3">
		{{ form_row(form.billingDate) }}
	</div>

	<div class="my-3">
		{{ form_row(form.repayment) }}
	</div>

	<div class="my-3">
		{{ form_row(form.game) }}
	</div>

	<div class="mt-5 mb-2 text-white d-flex align-items-center">
		<p id="name"></p>
	</div>
	<div class="my-2 text-white d-flex align-items-center">
		<p id="ref"></p>
	</div>
	<div class="my-2 text-white d-flex align-items-center">
		<p id="ticketnumber"></p>
	</div>
	<div class="my-2 text-white d-flex align-items-center">
		<p id="ticketPrice"></p>
	</div>
	<div class=" my-2 text-white d-flex align-items-center">
		<p id="totalPrice"></p>
	</div>

	<div class="my-4 mx-3">
		<button type="submit" class="text-center btn btn-primary mb-3 ">Enregistrer</button>
	</div>
</div>
{{ form_end(form) }}
